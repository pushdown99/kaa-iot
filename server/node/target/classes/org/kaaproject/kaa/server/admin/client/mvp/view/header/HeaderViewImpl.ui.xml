<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:gwt="urn:import:com.google.gwt.user.client.ui"
        xmlns:kaa="urn:import:org.kaaproject.kaa.server.admin.client.mvp.view.widget">
        
        <ui:with field='kaaAdminStyle' type='org.kaaproject.kaa.server.admin.client.KaaAdminResources.KaaAdminStyle'/> 
    
        <gwt:HorizontalPanel height="100%" width="100%">
            <gwt:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE">
                <gwt:HorizontalPanel height="100%">
                    <gwt:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE">
                        <gwt:Label styleName="{kaaAdminStyle.bAppHeaderTitle}" width="220px" height="100%" ui:field="title">
                            Kaa
                        </gwt:Label>
                    </gwt:cell>
                    <gwt:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE">
                        <gwt:HTMLPanel styleName="{kaaAdminStyle.bAppHeader}" width="200px" height="100%">
                            Administration UI
                        </gwt:HTMLPanel>
                    </gwt:cell>
                </gwt:HorizontalPanel>
            </gwt:cell>
            <gwt:cell horizontalAlignment="ALIGN_RIGHT" verticalAlignment="ALIGN_MIDDLE">
                <gwt:HorizontalPanel height="100%">
                    <gwt:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE">
                        <gwt:Label ui:field="usernameLabel" styleName="{kaaAdminStyle.bAppHeaderMenu}"></gwt:Label>
                    </gwt:cell>
                    <gwt:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE">
                        <gwt:Label ui:field="signoutLabel" styleName="{kaaAdminStyle.bAppHeaderMenu}"></gwt:Label>
                    </gwt:cell>
                    <gwt:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE">
                        <kaa:ActionsLabel ui:field="settingsLabel"/>
                    </gwt:cell>
                </gwt:HorizontalPanel>
            </gwt:cell>
        </gwt:HorizontalPanel>
</ui:UiBinder>